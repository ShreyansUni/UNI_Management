@model UNI_Management.ViewModel.WorkLogViewModal;

<!--begin::Content-->

<div class="d-flex flex-column flex-column-fluid" id="kt_content">

    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-xxl">
            <form id="employeeForm" asp-action="AddEdit" asp-controller="WorkLog" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Card-->
                        <div class="card">
                            <div class="row p-5">
                                <div class="col-md-6">
                                    <h1>WorkLog Add</h1>
                                </div>
                                <div class="col-md-6 text-end">

                                    <a class="btn rounded-2  border-primary" onclick="history.back()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                                        </svg>Back
                                    </a>
                                </div>
                            </div>
                         
                            <!--begin::Card body-->
                            <div class="card-body pt-5">
                                <div class="row">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="workLogDetails.WorkLogId" class="form-control" />
                                    </div>
                                    
                                    <div class="col-md-12">
                                        <label asp-for="workLogDetails.Subject">Subject</label>
                                        <input type="tel" asp-for="workLogDetails.Subject" class="form-control" />
                                        <span asp-validation-for="workLogDetails.Subject" class="text-danger"></span>
                                    </div>
                                   
                                   
                                </div>
                                <div class="row pt-5">

                                    <div class="col-md-12">
                                        <label asp-for="workLogDetails.Message">Message</label>
                                        <textarea asp-for="workLogDetails.Message" class="form-control"></textarea>
                                        <span asp-validation-for="workLogDetails.Message" class="text-danger"></span>
                                    </div>
                                   
                                </div>
                              
                            </div>
                            <!--end::Card body-->
                        </div>
                        <!--end::Card-->
                    </div>
                </div>


             
                 <div class="form-group pt-5 text-center">
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
            </form>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->
</div>
<!--end::Content-->

                                   